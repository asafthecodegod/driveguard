<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_default_profile"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_shape"
        android:clipToOutline="true"/>

    <!-- Username -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="student"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- User Details -->
    <TextView
        android:id="@+id/user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Type: 0\nCity: null\nLicense: On the Way There!"
        android:textSize="16sp"
        android:textColor="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="4dp"/>

    <!-- Add Friend Button -->
    <Button
        android:id="@+id/btn_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Friend"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/user_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Nudge Button -->
    <Button
        android:id="@+id/btn_nudge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nudge"
        android:backgroundTint="@color/orange"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_add_friend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Stats Section -->
    <LinearLayout
        android:id="@+id/stats_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_nudge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Circle (Night) -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle_background"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/circle_stat_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="180"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>
        </FrameLayout>

        <!-- Second Circle (Day) -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle_background"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/circle_stat_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="90"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Table for Data -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/stats_container"
        android:stretchColumns="1">

        <!-- Table Row 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green Form"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginEnd="16dp"/>

            <!-- Green Form Status (V or X) -->
            <TextView
                android:id="@+id/greenFormStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </TableRow>

        <!-- Table Row 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theory"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginEnd="16dp"/>

            <!-- Theory Status (V or X) -->
            <TextView
                android:id="@+id/theoryStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </TableRow>

        <!-- Table Row 3 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="License Date"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginEnd="16dp"/>

            <!-- License Date -->
            <TextView
                android:id="@+id/licenseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-05-10"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </TableRow>

        <!-- Table Row 4 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lessons Taken"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginEnd="16dp"/>

            <!-- Lessons Taken Counter -->
            <TextView
                android:id="@+id/lessonsTaken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
