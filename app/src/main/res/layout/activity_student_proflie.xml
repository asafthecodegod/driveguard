<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_default_profile"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_shape" />

        <!-- Student Name -->
        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black" />

        <!-- Driving Information -->
        <TextView
            android:id="@+id/driver_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Driver"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/student_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City: New York"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/license_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License: On the Way"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray" />

        <!-- Add Friend Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_add_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Friend"
                android:backgroundTint="@color/lavender"
                android:textColor="@color/white"
                android:padding="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Theory Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/theory_status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theory"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/theory_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Completed"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Green Form Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/green_form_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Green Form"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/green_form_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Submitted"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Lesson Counter -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/lesson_counter_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lessons"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lesson_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
