<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Card View for Night Counter -->

    <!-- Card View for Day Counter -->

    <!-- Permissions Section -->

    <TextView
        android:id="@+id/permissions_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="היתרים והגבלות"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/day_counter" />

    <TextView
        android:id="@+id/day_escort_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="תאריך סיום מלווה יום: 14/06/2024"
        app:layout_constraintEnd_toEndOf="@+id/night_escort_end_date"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/night_escort_end_date"
        app:layout_constraintTop_toBottomOf="@id/license_issue_date" />

    <TextView
        android:id="@+id/night_escort_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="תאריך סיום מלווה לילה: 14/09/2024"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/day_escort_end_date" />

    <Button
        android:id="@+id/change_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="שינוי תאריך קבלת רישיון"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/night_escort_end_date" />

    <TextView
        android:id="@+id/license_issue_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="תאריך הפקת רישיון: 14/03/2024"
        app:layout_constraintEnd_toEndOf="@+id/day_escort_end_date"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/day_escort_end_date"
        app:layout_constraintTop_toBottomOf="@id/night_permit" />

    <CheckBox
        android:id="@+id/night_permit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:checked="false"
        android:enabled="false"
        android:text="רשאי לנסוע ללא ליווי בלילה"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/day_permit" />

    <!-- Date and License Issue Info -->

    <!-- Button for changing license date -->

    <!-- TextView for User Greeting -->

    <CheckBox
        android:id="@+id/day_permit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:checked="false"
        android:enabled="false"
        android:text="רשאי לנסוע ללא ליווי ביום"
        app:layout_constraintEnd_toEndOf="@+id/night_permit"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/night_permit"
        app:layout_constraintTop_toBottomOf="@id/permissions_header" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Hi, User!"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/NightCounter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="12dp"
        android:elevation="4dp"
        app:cardCornerRadius="75dp"
        app:layout_constraintEnd_toStartOf="@id/day_counter"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/night_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="180"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/night_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_progress_bar"
            android:fromDegrees="0"
            android:indeterminate="false"
            android:max="100"
            android:pivotX="75%"
            android:pivotY="75%"
            android:progress="50"
            android:progressDrawable="@drawable/night_circle_shape"
            android:rotation="270"
            android:textAlignment="center"
            android:toDegrees="90" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/day_counter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="104dp"
        android:elevation="4dp"
        app:cardCornerRadius="75dp"
        app:layout_constraintStart_toEndOf="@id/NightCounter"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/day_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="90"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/day_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_progress_bar"
            android:fromDegrees="0"
            android:indeterminate="false"
            android:max="100"
            android:pivotX="75%"
            android:pivotY="75%"
            android:progress="50"
            android:progressDrawable="@drawable/day_circle_shape"
            android:rotation="270"
            android:textAlignment="center"
            android:toDegrees="90"

            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
