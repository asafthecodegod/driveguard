<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:padding="16dp">

    <TextView
        android:id="@+id/learning_phase_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Please Select Your Driving Learning Phase🌟"
        android:textSize="22sp"
        android:textColor="#004D40"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/learning_phase_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="24dp"
        android:padding="30dp"
        android:gravity="center"
        />


    <RadioGroup
        android:id="@+id/learning_phase_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/learning_phase_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <RadioButton
            android:id="@+id/beforeLearning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#00796B"
            android:text="Haven't Started Learning🛑"
            android:textColor="#004D40"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/midLearning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mid Learning🚗"
            android:textColor="#004D40"
            android:textSize="18sp"
            android:buttonTint="#00796B" />

        <RadioButton
            android:id="@+id/pastLearning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past Learning🏆"
            android:textColor="#004D40"
            android:textSize="18sp"
            android:buttonTint="#00796B" />

    </RadioGroup>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="380dp"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:text="Submit Your Choice✅"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/learning_phase_group" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Let's get you on the road safely!"
        android:textColor="#00796B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/submit_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
